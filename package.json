{
  "name": "lhwb",
  "version": "1.0.0",
  "description": "A Discord bot for Taylor Swift music.",
  "keywords": [
    "discord",
    "music",
    "merch",
    "utility"
  ],
  "author": "iandrewc",
  "bugs": {
    "url": "https://github.com/andrewc2/LHWB-Bot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewc2/LHWB-Bot.git"
  },
  "homepage": "https://github.com/andrewc2/LHWB-Bot#readme",
  "license": "GPL-3.0-only",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^22.18.0"
  },
  "workspaces": [
    "packages/framework",
    "packages/shared",
    "packages/music-bot",
    "packages/merch-bot",
    "packages/utility-bot"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "rebuild": "tsc -b --clean tsconfig.build.json && tsc -b tsconfig.build.json",
    "start": "pm2 start ecosystem.config.cjs",
    "start:music": "npm --prefix ./packages/music-bot start",
    "start:merch": "npm --prefix ./packages/merch-bot start",
    "start:utility": "npm --prefix ./packages/utility-bot start",
    "deploy:local": "cd deployment/build && npm install && npm run local",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix"
  },
  "dependencies": {
    "@snazzah/davey": "^0.1.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0"
  }
}
